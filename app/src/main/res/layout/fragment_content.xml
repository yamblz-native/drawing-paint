<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:src="@drawable/brush"
        android:id="@+id/brush"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" />

    <ru.yandex.yamblz.ui.views.CanvasView
        android:id="@+id/canvasView"
        android:layout_width="match_parent"
        android:layout_height="265dp"
        android:layout_below="@+id/brush"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/clear"
        android:src="@drawable/clear"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:layout_alignTop="@+id/brush"
        android:layout_toRightOf="@+id/color"
        android:layout_toEndOf="@+id/color" />

    <ImageView
        android:src="@drawable/color"
        android:id="@+id/color"
        android:layout_width="48dp"
        android:layout_height="47dp"
        android:padding="1dp"
        android:layout_alignTop="@+id/brush"
        android:layout_toRightOf="@+id/brush"
        android:layout_toEndOf="@+id/brush" />

</RelativeLayout>